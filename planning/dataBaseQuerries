db.activities.update({"activityName":"Hiking","destinations.destinationName":"Manali"},{$push:{"destinations.$.programmes":{ programmeId:"String",
programeName: "3-Day programme",
programeDiscription: "Description",
highlights: "Highlights",
startingLocation: "Start",
endLocation: "End",
groupSize: "5",
activityLevel: "Easy",
duration: "5-days",
budget: 10000,
inclusions: "ABC, DEF",
dates:[{
  dateid: "DATE",
  departureDate: "departure",
  tripStatus: "Active"}]
}
}
}
)

