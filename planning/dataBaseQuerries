db.activities.find({"activityName":"Hiking"})
db.activities.find({"activityName":"Hiking"}, {"destinations.destinationName":1}).pretty()
db.activities.find({"activityName":"Hiking","destinations.destinationName":"Manali"}, {"destinations.programmes.programeName":1}).pretty()
